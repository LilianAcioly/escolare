<div class="bg-sessions">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">
        <h1>Revise abaixo sua compra:</h1>
       <ul>
        <% @order.each do |order| %>
        <div d-flex>
        <h2>Produto: <%= order.product.name %></h2>
        <p>Quantidade: <%= order.quantity %></p>
        <p>Valor unit√°rio: <%= number_to_currency(order.product.price) %></p>
        <p>Valor total: <%= number_to_currency(order.product.price * order.quantity) %></p>
        <%= link_to "Excluir ordem de compra",
        products_path(@product),
        data: {turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir?"} %>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
