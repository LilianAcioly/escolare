<div class="bg-sessions">>
  <div class="container py-5">

      <div class="bg-white rounded p-3 shadow">

        <div class="row-one">

          <h2>Efetue a Compra</h2>
          <p>Preencha a quantidade desejada do produto</p>

        </div>

        <div class="row-two d-flex justify-content-between">

          <%= image_tag @product.photos[0] %>

          <div class="product_info">

            <h4><%= @product.name %></h4>

            <div class="d-flex">
              <h5>Estoque:</h5>
              <p><%=@product.quantity%></p>
            </div>

            <h3 class="card-trip-pricing">R$<%= @product.price %></h3>

          </div>

          <%= simple_form_for [@product, @order] do |f| %>
            <%= f.input :quantity, label: "Quantidade" %>
            <%= f.button :submit, "Comprar", class: "btn btn-primary ml-auto text-white font-weight-bold" %>
          <% end %>

        </div>


      </div>

  </div>

</div>
