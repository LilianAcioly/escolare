<h1>Aqui o produto tal vai ser mostrado</h1>

<% @product.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
<p><%= @product.name %></p>
<p><%= @product.description %></p>
<p><%= @product.rating %></p>
<p><%= @product.price %></p>

<% if @product.user === current_user  %>
  <%= link_to "Editar Produto", edit_product_path(@product), title: "Clique aqui para editar o produto" %>
  <%= link_to "Excluir Produto",
  product_path(@product),
  data: {turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir?"} %>
<% end %>
