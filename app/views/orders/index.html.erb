<div class="bg-sessions">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">
        <h1>Revise abaixo sua ordem de compra:</h1>
       <ul>
        <% @order.each do |order| %>
        <li><%= order.product.name %> - Quantidade: <%= order.quantity %></li>
        <% end %>
        <%= link_to "Excluir ordem de compra",
        products_path(@product),
        data: {turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir?"} %>
        </ul>
        </div>
      </div>
    </div>
  </div>
</div>
