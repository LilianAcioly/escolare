<div class="bg-sessions">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">

        <h1 class="text-center">Compras Recentes:</h1>

        <ul>
          <% @order.each_with_index do |order, index| %>

          <div class="card-product m-4 d-flex justify-content-between">
              <%= image_tag order.product.photos[0] %>

              <div class="card-product-infos ">
                <h2><%= order.product.name %></h2>
                <p>Quantidade: <%= order.quantity %></p>
                <p>Valor unit√°rio: <%= number_to_currency(order.product.price) %></p>
                <p>Valor total: <%= number_to_currency(order.product.price * order.product.quantity) %></p>
              </div>

            <!-- <div class="d-flex justify-content-end"> -->
              <%= link_to user_order_path(order.user.id, order),
                title: "Clique aqui para excluir esta compra da sua lista",
                data: {turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir?"} do %>
                <button class="btn btn-primary text-white font-bold me-4"><i class="fa-solid fa-trash"></i> Excluir</button>
              <% end %>
            <!-- </div> -->

          </div>
        <% end %>
      </ul>
        </div>
      </div>
    </div>
  </div>
</div>
